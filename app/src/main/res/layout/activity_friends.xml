<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Actitivies.FriendsActivity">

    <android.support.design.widget.TabLayout
            android:id="@+id/tabsFriends"
            app:tabIconTint="@color/CustomGray"
            app:tabIndicatorColor="@android:color/holo_orange_light"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:tabSelectedTextColor="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent" app:tabTextColor="@color/CustomGray">


    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
            android:id="@+id/viewpagerFriends"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_below="@+id/tabsFriends"

    />

</RelativeLayout>