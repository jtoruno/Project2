<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Actitivies.SearchActivity">

    <android.support.design.widget.TextInputLayout
            android:layout_width="239dp"
            android:layout_height="55dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="1dp"
            android:layout_marginTop="5dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/lay_search"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search..." android:id="@+id/input_search"/>
    </android.support.design.widget.TextInputLayout>
    <ImageButton
            android:src="@drawable/ic_search_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_search"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp" android:background="@android:color/transparent"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="14dp" android:layout_alignParentTop="true"
            android:tint="@color/design_default_color_primary"/>
    <android.support.design.widget.TabLayout
            android:id="@+id/tabsSearch"
            app:tabIconTint="@color/CustomGray"
            app:tabIndicatorColor="@android:color/holo_orange_light"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:tabSelectedTextColor="@color/colorPrimary"
            app:tabTextColor="@color/CustomGray"
            tools:layout_editor_absoluteX="0dp" android:layout_marginTop="14dp"
            android:layout_below="@+id/lay_search">
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
            android:id="@+id/viewpagerSearch"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/tabsSearch"
            android:layout_marginBottom="0dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="9dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="7dp"
            android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" android:layout_marginTop="5dp" android:layout_below="@+id/tabsSearch"/>
</RelativeLayout>