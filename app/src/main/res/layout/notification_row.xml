<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
>

    <TextView
            android:text="USERID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_not_txt_row"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/CardViewNotification"
            android:layout_marginStart="16dp" android:textStyle="bold" android:textSize="14sp"
            android:textColor="@android:color/black"/>
    <Button
            android:text="Confirm"
            android:layout_width="76dp"
            android:layout_height="39dp"
            android:background="@drawable/roundcorner"
            android:backgroundTint="@color/colorPrimary"
            android:id="@+id/btn_acceptNotification"
            android:layout_marginTop="72dp" app:layout_constraintTop_toTopOf="parent"
            android:textColor="@android:color/white"
            android:alpha="0.8" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="112dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.0"
    />
    <Button
            android:text="Decline"
            android:layout_width="76dp"
            android:layout_height="39dp"
            android:background="@drawable/roundcorner"
            android:id="@+id/btn_declineNotification" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="128dp" android:layout_marginTop="72dp"
            app:layout_constraintTop_toTopOf="parent" android:backgroundTint="#d3d3d3" android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="16dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/txt_mutualFriendsNotification" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>

    <android.support.v7.widget.CardView
            android:id="@+id/CardViewNotification"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.027">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/download"
                android:id="@+id/img_picNotification"/>
    </android.support.v7.widget.CardView>
    <TextView
            android:text="# mutual friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_mutualFriendsNotification"
            app:layout_constraintTop_toBottomOf="@+id/user_not_txt_row"
            app:layout_constraintStart_toEndOf="@+id/CardViewNotification" android:layout_marginStart="16dp"/>
    <TextView
            android:text="DATE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintStart_toEndOf="@+id/user_not_txt_row"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.903" android:textSize="12sp"/>
</android.support.constraint.ConstraintLayout>